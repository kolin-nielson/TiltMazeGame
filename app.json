{
  "expo": {
    "name": "Tilt Maze",
    "slug": "tilt-maze",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "jsEngine": "hermes",
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/your-project-id"
    },
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourusername.tiltmaze",
      "buildNumber": "1",
      "infoPlist": {
        "NSMotionUsageDescription": "This app uses motion sensors to control the game through device tilting.",
        "UIRequiresFullScreen": true,
        "UIStatusBarHidden": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourusername.tiltmaze",
      "versionCode": 1,
      "permissions": ["android.permission.VIBRATE"],
      "softwareKeyboardLayoutMode": "pan",
      "allowBackup": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-sensors",
        {
          "motionPermission": "Allow $(PRODUCT_NAME) to access your device motion to control the game."
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "userTrackingPermission": "This identifier will be used to deliver personalized ads to you.",
          "androidAppId": "ca-app-pub-4299404428269280~1234567890",
          "iosAppId": "ca-app-pub-4299404428269280~0987654321",
          "skipProguardConfigGeneration": false
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
